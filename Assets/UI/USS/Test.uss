/* Root container styling */
#root {
    background-image: url("project://database/Assets/UI/Backgrounds/bk.jpg");
    background-size: cover;
    background-position: center;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 40px;
}

/* Title text styling */
#title-label {
    unity-font-size: 36px;
    color: white;
    -unity-text-align: middle-center;
    margin-bottom: 40px;
    font-style: bold;
}

/* Buttons styling */
Button {
    width: 200px;
    height: 40px;
    font-size: 18px;
    -unity-text-align: middle-center;
    background-color: #2c3e50;
    color: white;
    border-radius: 8px;
    margin-bottom: 20px;
}

/* Remove extra margin for the last button */
#quit-button {
    margin-bottom: 0px;
}

/* Hover effect */
Button:hover {
    background-color: #34495e;
}

